{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "(/tests/.*\\.(test|spec))\\.(ts|js)$",
  "moduleNameMapper": {
    "^@app/(.*)$": "<rootDir>/../src/$1"
  },
  "reporters": [ "default", "jest-junit" ],
  "roots": ["<rootDir>/unit"]
}